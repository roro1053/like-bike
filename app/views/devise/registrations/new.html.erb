
<div class="user-new-registration-form">

<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上の英字と数字を含めて下さい)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"6文字以上の半角英数字"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="fiald">
   <%= f.label :nickname %><br />
   <%= f.text_area :nickname,placeholder:"最大40文字まで", maxlength:"40",rows:"3",class:"new-user-nickname-form" %>
  </div>

  <div class="fiald">
   <%= f.label :profile %><br />
   <%= f.text_area :profile, placeholder:"※任意  最大150字まで",maxlength:"150",rows:"3",class:"new-user-nickname-form"  %>
  </div>

  <div class="click-upload">
    <p>プロフィール画像 ※任意</p>
    <%= f.file_field :image, class: "new-user-profile-image" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <% end %>

  <div class="guest-login"><%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post,class:"btn-guest-login" %></div>
  <p><%= render "devise/shared/links" %></p>
</div>
