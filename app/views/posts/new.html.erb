<%= render "shared/posts_header" %>

<div class="new-box"><%= link_to "HOME", root_path %>
  <div class="new-post-form">
    <%= form_with model: @post, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
        <div class="text-box">
          <p class="comment-sentence">コメント</P>
          <%= f.text_area :text, class: "text-content", placeholder:"※最大150字まで", maxlength:"150",rows:"5" %>
        </div>
        <div class="img-upload">
          <i class="fas fa-camera fa-2x"></i>
          <div class="img-text">画像</div>
        </div>
      <div class="click-upload">
        <p class="comment-sentence">クリックしてファイルをアップロード</p>
        <%= f.file_field :image, class: "item-image" %>
      </div>
        <%= f.submit "投稿する",class: "post-btn" %>
      <div class="back-home"><%= link_to 'もどる', root_path, class:"back-btn" %></div>
    <% end %>
  </div>
</div>