<%= render "shared/posts_header" %>

<div class="new-box">
  <%= render "shared/home" %>
  <div class="new-post-form">
    <%= form_with model: @post, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
        <div class="text-box">
          <p class="comment-sentence">コメント</P>
          <%= f.text_area :text, class: "text-content", placeholder:"※最大150字まで", maxlength:"150",rows:"5" %>
        </div>
        <div class="img-upload">
          <i class="fas fa-camera fa-2x"></i>
          <div class="img-text">画像</div>
        </div>
      <div class="click-upload">
        <div class="comment-sentence">クリックしてファイルをアップロード</div>
        <%= f.file_field :image, class: "item-image" %>
      </div>
      <%= f.submit "投稿する",class: "post-btn" %>
      <%= link_to root_path do %>
        <p class="back-home-btn">
          <i class="fas fa-arrow-left"></i>
          戻る
        </p>
      <% end %>
    <% end %>
  </div>
</div>