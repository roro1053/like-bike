  <div class="posts-like-btn">
    <% if user_signed_in? %>
    <% if post.like_user(current_user.id)  %>
    <%= button_to "いいねを取り消す", post_likes_path(@post),method: :delete,remote: true %>
      <span class="heart-count">♡</span>
      <%= @post.likes.count %>
    <% else %>
    <%= button_to "いいね！", post_likes_path(@post),method: :post,remote: true %>
      <span class="heart-count">♡</span>
       <%= @post.likes.count %>
     <% end %>
     <% end %>
  </div>